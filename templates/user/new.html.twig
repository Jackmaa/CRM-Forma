{# templates/user/new.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-lg mx-auto py-8">
  <h1 class="text-2xl font-semibold mb-6">Créer un nouvel utilisateur</h1>

  {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    <div>
      {{ form_label(form.prenom) }}
      {{ form_widget(form.prenom, {'attr': {'class': 'w-full rounded p-2 border'}}) }}
      {{ form_errors(form.prenom) }}
    </div>
    <div>
      {{ form_label(form.nom) }}
      {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded p-2 border'}}) }}
      {{ form_errors(form.nom) }}
    </div>
    <div>
      {{ form_label(form.email) }}
      {{ form_widget(form.email, {'attr': {'class': 'w-full rounded p-2 border'}}) }}
      {{ form_errors(form.email) }}
    </div>
    <fieldset class="space-y-2">
      <legend class="font-medium">{{ form_label(form.role) }}</legend>
      {{ form_widget(form.role) }}
      {{ form_errors(form.role) }}
    </fieldset>
    <div class="flex justify-between">
        <div class="flex items-center">
          {{ form_widget(form.isActive) }}
          {{ form_label(form.isActive) }}
        </div>
        <div class="flex items-center">
          {{ form_widget(form.forcePasswordReset) }}
          {{ form_label(form.forcePasswordReset) }}
        </div>
    </div>
    <div class="mt-6">
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        Créer l’utilisateur
      </button>
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}
