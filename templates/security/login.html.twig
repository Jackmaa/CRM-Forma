{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full bg-white p-8 rounded shadow">
    {% if error %}
      <div class="mb-4 text-red-600">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}" class="space-y-6">
      {# jeton CSRF #}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          required
          autofocus
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded focus:ring focus:ring-opacity-50"
        >
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
        <input
          id="password"
          name="password"
          type="password"
          required
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded focus:ring focus:ring-opacity-50"
        >
      </div>

      <button
        type="submit"
        class="w-full py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700"
      >
        Se connecter
      </button>
    </form>
  </div>
</div>
{% endblock %}
