{# dashboard.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
<div class="flex">
  <main class="flex-1 space-y-6 p-4">
    <h2 class="text-2xl font-semibold text-base-content">
      Tableau de bord
    </h2>
    <div class="grid grid-cols-4 gap-4">
      <div {{ vue_component('Dashboard/StatsCard', { label: 'Formations en cours', value: 8 }) }}></div>
      <div {{ vue_component('Dashboard/StatsCard', { label: 'Devis en attente', value: 5 }) }}></div>
      <div {{ vue_component('Dashboard/StatsCard', { label: 'Factures en retard', value: 2 }) }}></div>
      <div {{ vue_component('Dashboard/StatsCard', { label: 'Taux de remplissage', value: '87%' }) }}></div>
    </div>

    <div {{ vue_component('Dashboard/RecentActivity')}}></div>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_CENTRE') %}
    <div {{ vue_component('Dashboard/QuickActions') }}></div>
    {% endif %}
  </main>
</div>
{% endblock %}