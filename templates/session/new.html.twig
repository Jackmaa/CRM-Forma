{% extends 'base.html.twig' %}
{% form_theme form 'forms/tailwind_form_theme.html.twig' %}

{% block body %}
<div class="p-6">
  <h1 class="text-2xl font-bold mb-4">Créer une session</h1>

  {{ form_start(form) }}

  <div class="grid md:grid-cols-2 gap-6">
    <div class="space-y-3">
      <h2 class="font-semibold">Informations session</h2>
      {{ form_row(form.formation) }}
      {{ form_row(form.formateur_responsable) }}
      {{ form_row(form.participants) }}
    </div>

    <div class="space-y-3">
      <h2 class="font-semibold">Détails</h2>
      {{ form_row(form.dateDebut) }}
      {{ form_row(form.dateFin) }}
      {{ form_row(form.lieu) }}
      {{ form_row(form.modalite) }}
    </div>
  </div>

  <div class="mt-6">
    {{ form_row(form.remarques) }}
  </div>

  <div class="mt-8 flex items-center gap-4">
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="{{ path('session_index') }}" class="btn btn-outline">Annuler</a>
  </div>

  {{ form_end(form) }}
</div>
{% endblock %}
