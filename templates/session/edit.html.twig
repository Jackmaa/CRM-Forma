{% extends 'base.html.twig' %}
{% form_theme form 'forms/tailwind_form_theme.html.twig' %}

{% block body %}
  <div class="p-6 bg-gray-50 min-h-screen">
    <h1 class="text-2xl font-semibold mb-6">Modifier la session</h1>

    {{ form_start(form) }}
      {{ form_row(form.formation) }}
      {{ form_row(form.formateur_responsable) }}
        {{ form_row(form.participants) }}
      {{ form_row(form.dateDebut) }}
      {{ form_row(form.dateFin) }}
      {{ form_row(form.lieu) }}
      {{ form_row(form.modalite) }}
      {{ form_row(form.remarques) }}

      <div class="flex items-center space-x-4 mt-6">
        <button
          type="submit"
          class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition"
        >
          Mettre Ã  jour
        </button>
        <a
          href="{{ path('session_show', {'id': session.id}) }}"
          class="text-gray-600 hover:underline"
        >
          Annuler
        </a>
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
