{# templates/centre/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Détails du centre{% endblock %}
{% block body %}
  <h1>Détails du centre</h1>
  <ul class="list-unstyled">
    <li><strong>Nom :</strong> {{ centre.nom }}</li>
    <li><strong>SIRET :</strong> {{ centre.siret }}</li>
    <li><strong>Adresse :</strong> {{ centre.adresse }}</li>
    <li><strong>Email :</strong> {{ centre.email }}</li>
    <li><strong>Téléphone :</strong> {{ centre.telephone }}</li>
    {% if centre.logoUrl %}
      <li><strong>Logo :</strong><br>
        <img src="{{ asset(centre.logoUrl) }}" alt="Logo de {{ centre.nom }}" class="img-fluid" style="max-height:150px;">
      </li>
    {% endif %}
  </ul>
  <a href="{{ path('centre_edit', {'id': centre.id}) }}" class="btn btn-primary">Modifier</a>
  <a href="{{ path('centre_index') }}" class="btn btn-secondary">Retour à la liste</a>
  {{ include('centre/_delete_form.html.twig') }}
{% endblock %}